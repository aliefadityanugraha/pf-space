# Server
PORT=3000
HOST=0.0.0.0

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=si_film_archive

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-long
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:5173

# CORS Allowed Origins (comma-separated, falls back to FRONTEND_URL if not set)
# ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# AI Provider (groq, openai, gemini)
AI_PROVIDER=gemini

# Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Google Gemini (recommended for semantic search)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Semantic Search (true/false)
# Enable to use embedding-based semantic search for better film recommendations
USE_SEMANTIC_SEARCH=true
