{
  "name": "si-film-archive-backend",
  "version": "1.0.0",
  "description": "Backend API for SI Film Archive",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src --ext js,json --ignore uploads --ignore uploads/** src/index.js",
    "start": "node src/index.js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
