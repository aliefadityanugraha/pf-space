    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cookie": "^10.0.0",
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^9.0.0",
    "@tus/file-store": "^2.0.0",
    "@tus/server": "^2.3.0",
    "better-auth": "^1.4.9",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-better-auth": "^1.2.0",
    "knex": "^3.1.0",
    "kysely": "^0.28.9",
    "mysql2": "^3.11.0",
    "objection": "^3.1.4",
    "sanitize-html": "^2.17.1",
    "sharp": "^0.34.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "vitest": "^3.2.4"
